@model List<Vidly.Models.Customers>
@{
                /**/

                ViewBag.Title = "Customers";
                Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
@if (Model.Count == 0)
{
    <text>We don't have any customer yet.</text>
}
else
{
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>Customer</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@Html.ActionLink(customer.Name, "Details", "Movies"
                       , new { id = customer.Id}, null)</td>
                </tr>
             }
            </tbody>
    </table>
}
